<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pos_config_discount_view_form" model="ir.ui.view">
            <field name="name">pos.config.discount.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='pos_interface_section']" position='after'>
                    <h2>Discount Configuration in POS</h2>

                    <div class="row mt16 o_settings_container" id="discount_section">
                        <div class="o_setting_right_pane">
                            <label for="discount_type" string="Discount Type"/>
                            <div class="text-muted">
                                Define Discount Type
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="discount_type" widget="radio" class="o_light_label" options="{'horizontal': false}" />
                                    
                                    <field name="percentage_limit" invisible="1" />
                                    <field name="fixed_limit" widget="monetary" invisible="1" />
                                    <field name="session_id" invisible="1"/>
                                    <field name='order_discount' invisible='1'/>


                                </div>
                                
                            </div>

                        </div>
                    </div>
                    
                </xpath>
            </field>
        </record>

    </data>
</odoo>
